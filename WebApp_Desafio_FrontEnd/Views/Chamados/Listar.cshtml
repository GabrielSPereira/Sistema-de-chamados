@model WebApp_Desafio_FrontEnd.ViewModels.ChamadoViewModel

@{
    ViewData["Title"] = "Chamados";
}

@{
    Html.RenderPartial("../shared/menu.cshtml");
}

<div class="row mt-3">
    <div class="col-lg-12">

        <table class="table table-striped table-bordered table-hover" id="dataTables-Chamados">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ID)</th>
                    <th>@Html.DisplayNameFor(model => model.Assunto)</th>
                    <th>@Html.DisplayNameFor(model => model.Solicitante)</th>
                    <th>@Html.DisplayNameFor(model => model.Departamento)</th>
                    <th>@Html.DisplayNameFor(model => model.DataAbertura)</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>

@section styles 
{
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
}

@section scripts 
{
    <!-- SweetAlert2 -->
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>

    <script src="~/js/Chamados/Listar.js" asp-append-version="true"></script>
}
